# PrintEasy QR Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL connection string (Replit provides this automatically)
DATABASE_URL=postgresql://username:password@host:port/database

# Individual PostgreSQL credentials (fallback if DATABASE_URL not set)
PGHOST=localhost
PGPORT=5432
PGDATABASE=printeasy
PGUSER=postgres
PGPASSWORD=your_password_here

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Node environment (development, production, test)
NODE_ENV=development

# Server port
PORT=5000

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session secret for cookies
SESSION_SECRET=your-session-secret-change-this-in-production

# ==========================================
# CLOUD STORAGE CONFIGURATION (Optional)
# ==========================================
# Cloudflare R2 / AWS S3 Compatible Storage
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=
R2_ENDPOINT=
R2_PUBLIC_URL=

# Replit Object Storage (auto-configured in Replit)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=
DEFAULT_OBJECT_STORAGE_BUCKET_NAME=
PUBLIC_OBJECT_SEARCH_PATHS=
PRIVATE_OBJECT_DIR=

# ==========================================
# EXTERNAL SERVICES (Optional)
# ==========================================
# WhatsApp OTP Service (Gupshup)
GUPSHUP_API_KEY=
GUPSHUP_APP_NAME=
GUPSHUP_SOURCE_PHONE=

# Google Maps API
GOOGLE_MAPS_API_KEY=

# ==========================================
# BUILD & DEPLOYMENT CONFIGURATION
# ==========================================
# Skip database operations during build
SKIP_MIGRATIONS=false
SKIP_DB_CHECK=false
DISABLE_DB_SYNC=true

# ==========================================
# FEATURE FLAGS
# ==========================================
# Enable/disable specific features
ENABLE_WHATSAPP_OTP=false
ENABLE_R2_STORAGE=false
ENABLE_GOOGLE_MAPS=false

# ==========================================
# LOGGING & DEBUGGING
# ==========================================
# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable SQL query logging
SEQUELIZE_LOGGING=false

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Cookie settings
COOKIE_SECURE=false  # Set to true in production with HTTPS
COOKIE_SAME_SITE=lax
COOKIE_MAX_AGE=86400000  # 24 hours in milliseconds

# ==========================================
# RATE LIMITING
# ==========================================
# Max requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
# Max file size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# Max files per upload
MAX_FILES_PER_UPLOAD=20

# Upload directory (local storage)
UPLOAD_DIR=./uploads